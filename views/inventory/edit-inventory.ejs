<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <div class="flash-message"><%- messages() %>
        <% if (errors) { %>
            <ul class="notice">
           <% errors.array().forEach(error => { %>
             <li><%= error.msg %></li>
          <%  }) %>
           </ul>
          <% } %>
    </div>

    <form class="input-box" id="updateForm" action="/inv/update" method="POST">
        <fieldset id="accountFieldset">
            <legend></legend>
            <div class="input-group" id="addClassGroup">
                <label for="classification">Classification</label>
                <%- classificationSelect %>
            </div>
            <div class="input-group" id="addMakeGroup">
                <label for="make">Make:</label>
                <input type="text" name="inv_make" id="make" required placeholder="Min of 3 characters"  pattern="^[a-zA-Z0-9]+.{2,}$" value="<%= locals.inv_make %>">
            </div>
            <div class="input-group" id="addModelGroup">
                <label for="model">Model:</label>
                <input type="text" name="inv_model" id="model" required placeholder="Min of 3 characters"  pattern="^[a-zA-Z0-9]+.{2,}$" value="<%= locals.inv_model %>">
            </div>
            <div class="input-group" id="addDescriptionGroup">
                <label for="description">Description:</label>
                <textarea type="text" name="inv_description" id="description" required><%= locals.inv_description %></textarea>
            </div>
            <div class="input-group" id="addImageGroup">
                <label for="image">Image Path:</label>
                <input type="text" name="inv_image" id="image" required value="<%= locals.inv_image %>">
            </div>
            <div class="input-group" id="addThumbnailGroup">
                <label for="thumbnail">Thumbnail Path:</label>
                <input type="text" name="inv_thumbnail" id="thumbnail" required value="<%= locals.inv_thumbnail %>">
            </div>
            <div class="input-group" id="addPriceGroup">
                <label for="price">Price:</label>
                <input type="number" name="inv_price" id="price" required min="0" max="1000000" placeholder="decimal or integer" value="<%= locals.inv_price %>">
            </div>
            <div class="input-group" id="addYearGroup">
                <label for="year">Year:</label>
                <input type="number" name="inv_year" id="year" required min="1900" max="2025" placeholder="4 digit year" value="<%= locals.inv_year %>">
            </div>
            <div class="input-group" id="addMileageGroup">
                <label for="mileage">Miles:</label>
                <input type="number" name="inv_miles" id="mileage" required min="0" max="1000000" placeholder="digits only" value="<%= locals.inv_miles %>">
            </div>
            <div class="input-group" id="addColorGroup">
                <label for="color">Color:</label>
                <input type="text" name="inv_color" id="color" required value="<%= locals.inv_color %>" placeholder="Min of 3 characters"  pattern="^[a-zA-Z0-9]+.{2,}$">
            </div>
            <button type="Update Inventory" disabled>Update Inventory</button>
            <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>
        </fieldset>
        <script src="/js/inv-update.js"></script>
    </form>
