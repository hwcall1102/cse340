<h1><%- title %></h1>
<div class="flash-message"><%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
</div>
<% if(locals.accountData.account_type == "Client") { %>

    <h2 id="loginWelcome">Welcome <%- locals.accountData.account_firstname %></h2>
    <h3 id="updateTitle">Account Management</h3>
    <p id="updateAccount"><a href="/account/update/<%-locals.accountData.account_id %>">Update account information</a></p>

    <% } else if(locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") { %>
        <h2 id="loginWelcome">Welcome <%- locals.accountData.account_firstname %> </h2>
        <h3 id="updateTitle">Account Management</h3>
        <p id="updateAccount"><a href="/account/update/<%-locals.accountData.account_id %>">Update account information</a></p>
        <h3 id="invTitle">Inventory Management</h3>
        <p id="updateInv"><a href="/inv/">Manage Inventory</a></p>
        <p id="messages"><a href="account/view-messages">View Messages</a></p>
    <% } %>